<%= simple_form_for @sensor, html: {class: 'form-horizontal form-label-left'} do |f| %>
  <div class="row">
    <div class="col-lg-6  col-md-6 col-sm-12 col-xs-12">
      <div class="form-group">
        <label for="name">Paciente<span class="required">*</span>
        </label>
        <div>
          <%= f.association :patient, label: false, input_html: {class: 'form-control col-md-7 col-xs-12'} %>
        </div>
      </div>
      <div class="form-group">
        <label for="name">Nome<span class="required">*</span>
        </label>
        <div>
          <%= f.input :name, label: false, input_html: {class: 'form-control col-md-7 col-xs-12'} %>
        </div>
      </div>
      <div class="form-group">
        <label for="last-name">Token <span class="required">*</span>
        </label>
        <div>
          <%= f.input :token, label: false, input_html: {class: 'form-control col-md-7 col-xs-12'} %>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-md-3">
            <label for="middle-name">Capacidade <span class="required">*</span></label>
            <div>
              <%= f.input :capacity, as: :select, collection: Sensor.capacities.map{ |p| [p.first, p.second.to_d] }, include_blank: false, label: false, input_html: {class: 'form-control col-md-7 col-xs-12'} %>
            </div>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="x_form_actions">
          <a class="btn btn-disabled" href="javascript:history.back(-1);">Cancelar</a>
          <button type="submit" class="btn btn-default">Salvar</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
