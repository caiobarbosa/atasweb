<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="header">
        <h2>Login</h2>
        <h3>Insira as suas credenciais de acesso</h3>
    </div>

    <div class="content">
        <%= f.input :email, required: false, label: false, autofocus: true, placeholder: 'E-mail', input_html: {class: 'form-control'} %>
        <%= f.input :password, label: false, placeholder: 'Senha', input_html: {class: 'form-control'}, required: false %>

        <div class="opts">
            <div class="left">
              <% if devise_mapping.rememberable? %>
                  <%= f.input :remember_me, as: :boolean, label: 'Mantenha-me Conectado' %>
              <% end %>
            </div>
            <div class="right">
                <button type="submit" class="btn btn-primary">Acessar</button>
            </div>
        </div>
    </div>

    <div class="footer">
        <p>ATAS Â© 2016 All Rights Reserved. by <a href="http://salvus.me" target="_blank">Salvus</a></p>
    </div>
<% end %>